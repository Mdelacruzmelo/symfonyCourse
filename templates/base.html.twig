<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>{% block title %}Welcome!{% endblock %}</title>
		{% block stylesheets %}
			<link href="{{ asset('assets/css/style.css') }}" type="text/css" rel="stylesheet" />
			<link href="{{ asset('assets/css/font-awesome.min.css') }}" type="text/css" rel="stylesheet" />
		{% endblock %}

	</head>
	<body>
		{% block header %}
			<div id="header">
				<span id="logoApp"> 
					<span class="font-weight-bold">Tareas</span> | 
					<span class="text-muted">symfony</span></span>
				<ul id="menu">
					{% if app.user %}
						{#<li><a href="{{ path('task_creation') }}">+</a></li>#}
						<li><a href="{{ path('tasks') }}">Inicio</a></li>
						<li><a href="{{ path('my-tasks') }}">Mis tareas</a></li>
						<li><a href="">{{ app.user.name }} {{ app.user.surname }}</a></li>
						<li><a href="{{ path('logout') }}">Cerrar Sesi√≥n</a></li>
						{% else %}
						<li><a href="{{ path('login') }}">Login</a></li>
						<li><a href="{{ path('register') }}">Registro</a></li>
						{% endif %}
				</ul>
			</div>
			<div class="clearfix"></div>
		{% endblock %}
		{% block body %}{% endblock %}
		{% block javascripts %}{% endblock %}
	</body>
</html>
