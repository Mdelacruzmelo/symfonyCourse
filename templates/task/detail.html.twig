{% extends 'base.html.twig' %}

{% block title %}Todas las tareas{% endblock %}

{% block body %}

	<div class="example-wrapper">

		<span class="font-size15">
			<strong>{{ task.title }} </strong>
			|
			<span class="font-weight-light font-size15">
				{{ task.user.name }} {{ task.user.surname }}
			</span>
			|
			<span style="color:gray">
				{{ task.hours }}h
			</span>
				<br>
				<span class="font-size8 text-muted">
					{{ task.createdAt|date('d/m/Y h:i:s') }} &nbsp;|&nbsp; Priority: {{ task.priority }}
				</span> 
		</span> 


		<p>
			{{ task.content }}
		</p>

	</div>
{% endblock %}
